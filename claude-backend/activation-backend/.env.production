# 生产环境配置 - activation-backend

# 应用配置
NODE_ENV=production
PORT=8888

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=license_server
DB_USER=root
DB_PASS=your_production_db_password

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_production_redis_password
