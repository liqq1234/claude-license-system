# Docker Compose 环境变量配置 - 宝塔部署版

# 宝塔MySQL数据库配置（使用宝塔面板的MySQL）
DB_HOST=host.docker.internal  # 或者使用宝塔服务器的内网IP
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_baota_mysql_password

# Redis配置
REDIS_PASSWORD=your_redis_password

# Claude 服务配置
CLAUDE_BASE_URL=https://claude.lqqmail.xyz
CLAUDE_PROXY_DOMAIN=claude.lqqmail.xyz

# 管理员配置
ADMIN_PASSWORD=your_production_admin_password

# 安全配置
JWT_SECRET=your_production_jwt_secret_very_long_and_secure
LICENSE_SECRET=your_production_license_secret
TOKEN_ENCRYPTION_KEY=your_production_token_encryption_key
ADMIN_KEY=your_production_admin_key

# 邮件服务配置
SMTP_HOST=smtp.163.com
SMTP_PORT=465
SMTP_USER=your_production_email@163.com
SMTP_PASS=your_production_smtp_code

# Token配置
TOKEN_EXPIRES_IN=86400
DB_CONNECTION_LIMIT=20
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# 前端API配置（根据你的域名修改）
FRONTEND_ACTIVATION_API_URL=https://your-domain.com:8888
FRONTEND_POOL_API_URL=https://your-domain.com:8787

# 管理器API配置（根据你的域名修改）
MANAGER_ACTIVATION_API_URL=https://your-domain.com:8888
MANAGER_POOL_API_URL=https://your-domain.com:8787
